---
import Layout from "~/layouts/Layout.astro";
import LoginForm from "~/components/auth/LoginForm.astro";

const metadata = {
  title: "Login",
  description: "Faça login na sua conta",
};
---

<Layout metadata={metadata}>
  <section class="mx-auto flex min-h-screen w-full max-w-md flex-col justify-center px-4 py-10">
    <div class="rounded-xl border bg-white p-6 shadow-sm dark:border-slate-800 dark:bg-slate-900 sm:p-8">
      <div class="mb-6">
        <h1 class="mb-2 text-3xl font-bold">Bem-vindo</h1>
        <p class="text-sm text-slate-600 dark:text-slate-400">
          Faça login para acessar sua conta.
        </p>
      </div>

      <LoginForm />
    </div>
  </section>
</Layout>
