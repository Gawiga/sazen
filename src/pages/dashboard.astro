---
import PageLayout from "~/layouts/PageLayout.astro";
import Loading from "~/components/widgets/Loading.astro";
import UserMenu from "~/components/auth/UserMenu.astro";
import Button from "~/components/ui/Button.astro";

const metadata = {
  title: "Dashboard",
  description: "Seu painel de controle",
};
---

<PageLayout metadata={metadata}>
  <Loading />
  <section class="mx-auto max-w-5xl px-4 py-8 sm:py-10">
    <div class="mb-6 flex flex-col gap-3 sm:flex-row sm:items-center sm:justify-between">
      <h1 class="text-3xl font-bold text-gray-900 dark:text-white sm:text-4xl">Dashboard</h1>
      <UserMenu />
    </div>

    <nav class="mb-8">
      <div class="grid grid-cols-1 gap-3 sm:grid-cols-2 lg:grid-cols-4">
        <Button href="/pacientes" variant="primary" class="min-h-11 rounded-md px-4 py-2">
          Pacientes
        </Button>
        <Button
          href="/sessoes"
          variant="secondary"
          class="min-h-11 rounded-md border-green-600 bg-green-600 px-4 py-2 text-white hover:border-green-700 hover:bg-green-700 dark:text-white">
          Sessões
        </Button>
        <Button
          href="/relatorios-faturamento"
          variant="secondary"
          class="min-h-11 rounded-md border-indigo-600 bg-indigo-600 px-4 py-2 text-white hover:border-indigo-700 hover:bg-indigo-700 dark:text-white">
          Faturamento
        </Button>
        <Button
          href="/relatorios-valores-receber"
          variant="secondary"
          class="min-h-11 rounded-md border-cyan-600 bg-cyan-600 px-4 py-2 text-white hover:border-cyan-700 hover:bg-cyan-700 dark:text-white">
          Valores a Receber
        </Button>
      </div>
    </nav>

    <div class="rounded-lg bg-white p-5 shadow dark:bg-gray-800 sm:p-6">
      <h2 class="mb-3 text-xl font-semibold text-gray-800 dark:text-gray-200">Bem-vindo ao seu dashboard</h2>
      <p class="text-gray-600 dark:text-gray-400">Aqui você pode gerenciar seus pacientes, sessões e relatórios.</p>
    </div>
  </section>
</PageLayout>
