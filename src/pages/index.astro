---
import Layout from "~/layouts/PageLayout.astro";
import Button from "~/components/ui/Button.astro";

const metadata = {
  title: "Sazen",
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <section class="mx-auto max-w-xl px-4 py-10 sm:py-14">
    <div class="rounded-xl border bg-white p-6 shadow dark:border-gray-800 dark:bg-gray-900 sm:p-8">
      <h1 class="mb-2 text-3xl font-bold text-gray-900 dark:text-white">Sazen</h1>
      <p class="mb-6 text-sm text-gray-600 dark:text-gray-400">
        Acesse o sistema para gerenciar pacientes, sessões e relatórios.
      </p>

      <div class="grid grid-cols-1 gap-3 sm:grid-cols-2">
        <Button
          href="/login"
          variant="primary"
          class="min-h-12 rounded-md border-blue-700 px-4 py-3 text-base font-semibold">
          Login
        </Button>
        <Button
          href="/dashboard"
          variant="secondary"
          class="min-h-12 rounded-md border-gray-300 bg-white px-4 py-3 text-base font-semibold text-gray-800 hover:bg-gray-100 dark:border-gray-700 dark:bg-gray-800 dark:text-white dark:hover:bg-gray-700">
          Dashboard
        </Button>
      </div>
    </div>
  </section>
</Layout>
