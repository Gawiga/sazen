---
import '@fontsource-variable/inter';

// 'DM Sans'
// Nunito
// Dosis
// Outfit
// Roboto
// Literata
// 'IBM Plex Sans'
// Karla
// Poppins
// 'Fira Sans'
// 'Libre Franklin'
// Inconsolata
// Raleway
// Oswald
// 'Space Grotesk'
// Urbanist
---

<style is:inline>
  :root {
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: 'Inter Variable';
    --aw-font-heading: 'Inter Variable';

    --aw-color-primary: rgb(1 97 239);
    --aw-color-secondary: rgb(1 84 207);
    --aw-color-accent: rgb(109 40 217);

    --aw-color-text-heading: rgb(0 0 0);
    --aw-color-text-default: rgb(16 16 16);
    --aw-color-text-muted: rgb(16 16 16 / 66%);
    --aw-color-bg-page: rgb(255 255 255);

    --aw-color-bg-page-dark: rgb(3 6 32);

    ::selection {
      background-color: lavender;
    }
  }

  .dark {
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: 'Inter Variable';
    --aw-font-heading: 'Inter Variable';

    --aw-color-primary: rgb(1 97 239);
    --aw-color-secondary: rgb(1 84 207);
    --aw-color-accent: rgb(109 40 217);

    --aw-color-text-heading: rgb(247, 248, 248);
    --aw-color-text-default: rgb(229 236 246);
    --aw-color-text-muted: rgb(229 236 246 / 66%);
    --aw-color-bg-page: rgb(3 6 32);

    ::selection {
      background-color: black;
      color: snow;
    }
  }

  .lilac {
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: 'Inter Variable';
    --aw-font-heading: 'Inter Variable';

    --aw-color-primary: rgb(168 85 247);
    --aw-color-secondary: rgb(147 51 234);
    --aw-color-accent: rgb(196 181 253);

    --aw-color-text-heading: rgb(247 248 248);
    --aw-color-text-default: rgb(236 233 254);
    --aw-color-text-muted: rgb(221 214 254 / 68%);
    --aw-color-bg-page: rgb(19 13 34);
    --aw-color-bg-page-dark: rgb(19 13 34);

    ::selection {
      background-color: rgb(76 29 149);
      color: rgb(250 245 255);
    }
  }

  .lilac .bg-white {
    background-color: rgb(30 21 50);
  }

  .lilac .border-gray-300,
  .lilac .border-gray-200,
  .lilac .border-gray-700,
  .lilac .border-gray-800 {
    border-color: rgb(91 33 182);
  }

  .lilac .text-gray-900,
  .lilac .text-gray-800,
  .lilac .text-gray-700,
  .lilac .text-gray-600,
  .lilac .text-gray-500,
  .lilac .text-gray-400 {
    color: rgb(233 213 255);
  }

  .lilac .bg-blue-600,
  .lilac .bg-green-600,
  .lilac .bg-indigo-600,
  .lilac .bg-cyan-600 {
    background-color: rgb(168 85 247);
    border-color: rgb(168 85 247);
  }

  .lilac .hover\:bg-blue-700:hover,
  .lilac .hover\:bg-green-700:hover,
  .lilac .hover\:bg-indigo-700:hover,
  .lilac .hover\:bg-cyan-700:hover {
    background-color: rgb(147 51 234);
    border-color: rgb(147 51 234);
  }

  .lilac .dark\:bg-gray-800,
  .lilac .dark\:bg-gray-900 {
    background-color: rgb(30 21 50);
  }

  .lilac .dark\:text-white,
  .lilac .dark\:text-gray-100,
  .lilac .dark\:text-gray-200,
  .lilac .dark\:text-gray-300,
  .lilac .dark\:text-gray-400 {
    color: rgb(236 233 254);
  }

  .lilac .dark\:hover\:bg-gray-700:hover,
  .lilac .dark\:hover\:bg-gray-800:hover {
    background-color: rgb(45 32 75);
  }
</style>
