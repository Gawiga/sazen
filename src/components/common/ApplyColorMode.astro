---
import { UI } from 'astrowind:config';

// TODO: This code is temporary
---

<script is:inline define:vars={{ defaultTheme: UI.theme || 'system' }}>
  function applyTheme(theme) {
    document.documentElement.classList.remove('dark', 'lilac');
    if (theme === 'dark') document.documentElement.classList.add('dark');
    if (theme === 'lilac') document.documentElement.classList.add('lilac');

    const matches = document.querySelectorAll('[data-aw-toggle-color-scheme] > input');

    if (matches && matches.length) {
      matches.forEach((elem) => {
        elem.checked = theme === 'light';
      });
    }
  }

  if ((defaultTheme && defaultTheme.endsWith(':only')) || (!localStorage.theme && defaultTheme !== 'system')) {
    const lockedTheme = defaultTheme.replace(':only', '');
    applyTheme(lockedTheme === 'lilac' ? 'lilac' : lockedTheme);
  } else if (
    localStorage.theme === 'dark' ||
    (!('theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)
  ) {
    applyTheme('dark');
  } else if (localStorage.theme === 'lilac') {
    applyTheme('lilac');
  } else {
    applyTheme('light');
  }
</script>
